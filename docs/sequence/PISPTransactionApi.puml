@startuml

title PISP Transaction


participant "PISP Backend" as PISP
box "thirdparty-scheme-adapter"
  participant "outbound-server" as OBS
  participant "3p-state" as ST8
  participant "inbound-server" as IBS
end box

box "Mojaloop"
    participant Switch
end box

