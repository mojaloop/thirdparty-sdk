    "@types/hapi__hapi": "^20.0.10",
    "@types/hapi__inert": "^5.2.3",
    "@types/hapi__vision": "^5.5.3",
    "@types/javascript-state-machine": "^2.4.3",
    "@types/jest": "26.0.24",
    "@types/node": "^14.18.12",
    "@types/promise-timeout": "^1.3.0",
    "@types/redis": "^2.8.32",
