{
  "name": "@mojaloop/thirdparty-scheme-adapter",
  "version": "11.21.0",
  "description": "Thirdparty Scheme Adapter ",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "build": "tsc && cp -R config dist",
    "build:api": "npm run build:api:inbound && npm run build:api:outbound",
    "build:api:inbound": "swagger-cli bundle -o ./src/interface/api-inbound.yaml -t yaml ./src/interface/api-inbound-template.yaml && swagger-cli validate ./src/interface/api-inbound.yaml",
    "build:api:outbound": "swagger-cli bundle -o ./src/interface/api-outbound.yaml -t yaml ./src/interface/api-outbound-template.yaml && swagger-cli validate ./src/interface/api-outbound.yaml",
    "build:api:ttk": "npm run build:ttk-fspiop:api && npm run build:ttk-3p:api",
    "build:ttk-fspiop:api": "swagger-cli bundle -o ./docker/contract/ml-testing-toolkit/spec_files/api_definitions/fspiop_1.0/api_spec.yaml -t yaml ./docker/contract/ml-testing-toolkit/spec_files/api_definitions/fspiop_1.0/api-template.yaml && swagger-cli validate ./docker/contract/ml-testing-toolkit/spec_files/api_definitions/fspiop_1.0/api_spec.yaml",
    "build:ttk-3p:api": "swagger-cli bundle -o ./docker/contract/ml-testing-toolkit/spec_files/api_definitions/thirdparty_pisp/api_spec.yaml -t yaml ./docker/contract/ml-testing-toolkit/spec_files/api_definitions/thirdparty_pisp/thirdparty-pisp-api-template.yaml && swagger-cli validate ./docker/contract/ml-testing-toolkit/spec_files/api_definitions/thirdparty_pisp/api_spec.yaml",
    "docker:build": "docker build -t thirdparty-scheme-adapter:local -f ./docker/Dockerfile ./",
    "docker:run:inbound": "docker run -p 4005:4005 thirdparty-scheme-adapter:local npm run start:inbound",
    "docker:run:outbound": "docker run -p 4006:4006 thirdparty-scheme-adapter:local npm run start:outbound",
    "lint": "eslint ./src/**/*.ts *.js",
    "pretest": "echo \"pretest - TODO...\"",
    "release": "standard-version --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'",
    "standard": "echo '\\033[1;33m  This project uses eslint instead of standard. Use `npm run lint` instead.'",
    "start": "echo 'use `npm run start:inbound` or `npm run start:outbound`'",
    "start:inbound": "ts-node --project ./tsconfig.json --files --require tsconfig-paths/register ./src/cli.ts inbound",
    "start:outbound": "ts-node --project ./tsconfig.json --files --require tsconfig-paths/register ./src/cli.ts outbound",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli.ts",
    "test": "npm run test:unit",
    "test:bdd": "jest --config './jest.bdd.config.js' --runInBand --testMatch '**/test/step-definitions/**/*.step.ts'",
    "test:coverage": "jest --coverage  --testMatch '**/test/unit/**/*.(test|spec).ts'",
    "test:coverage-check": "jest --coverage --testMatch '**/test/unit/**/*.(test|spec).ts'",
    "test:integration": "jest --config './jest.integration.config.js' --testMatch '**/test/integration/**/*.(test|spec).ts'",
    "test:unit": "jest --coverageThreshold='{}' --testMatch '**/test/unit/**/*.(test|spec).ts'",
    "updates:check": "npm-check-updates",
    "updates:update": "npm-check-updates -u && npm install",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm test",
      "post-commit": "git update-index --again",
      "pre-push": "npm test && npm run updates:check && npm run audit:check"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/thirdparty-scheme-adapter.git"
  },
  "keywords": [
    "metrics",
    "central",
    "services",
    "pisp"
  ],
  "author": "Pawe≈Ç Marzec <pawel.marzec@modusbox.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/thirdparty-scheme-adapter/issues"
  },
  "homepage": "https://github.com/mojaloop/thirdpartyscheme-adapter#readme",
  "dependencies": {
    "@hapi/boom": "9.1.0",
    "@hapi/good": "9.0.1",
    "@hapi/hapi": "20.0.1",
    "@hapi/inert": "6.0.3",
    "@hapi/vision": "6.0.1",
    "@mojaloop/api-snippets": "^11.0.18",
    "@mojaloop/central-services-error-handling": "^10.6.0",
    "@mojaloop/central-services-health": "^10.6.0",
    "@mojaloop/central-services-metrics": "^9.5.0",
    "@mojaloop/central-services-shared": "^11.4.2",
    "@mojaloop/sdk-standard-components": "^12.0.1",
    "@types/axios": "^0.14.0",
    "@types/convict": "^5.2.1",
    "@types/hapi": "^18.0.3",
    "@types/hapi__hapi": "^20.0.1",
    "@types/hapi__inert": "^5.2.1",
    "@types/hapi__vision": "^5.5.2",
    "@types/javascript-state-machine": "^2.4.2",
    "@types/jest": "26.0.14",
    "@types/node": "^14.11.8",
    "@types/redis": "^2.8.27",
    "ajv": "^6.12.6",
    "ajv-keywords": "^3.5.2",
    "axios": "^0.21.1",
    "blipp": "^4.0.1",
    "commander": "^6.1.0",
    "convict": "^6.0.0",
    "javascript-state-machine": "^3.1.0",
    "openapi-backend": "^3.6.3",
    "path": "^0.12.7",
    "redis": "^3.0.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.0.3",
    "uuidv4": "^6.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/redis-mock": "^0.17.0",
    "@typescript-eslint/eslint-plugin": "4.4.1",
    "@typescript-eslint/parser": "4.4.1",
    "add": "^2.0.6",
    "eslint": "7.11.0",
    "eslint-config-standard": "14.1.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-cucumber": "^1.4.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^4.3.0",
    "jest": "26.5.3",
    "jest-cucumber": "^3.0.0",
    "jest-junit": "12.0.0",
    "jest-mock-process": "^1.4.0",
    "lint-staged": "^10.4.0",
    "multi-file-swagger": "^2.3.0",
    "nodemon": "^2.0.4",
    "npm-audit-resolver": "^2.2.1",
    "npm-check-updates": "^9.0.4",
    "redis-mock": "^0.52.0",
    "source-map-support": "0.5.19",
    "standard-version": "^9.0.0",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^26.4.1"
  }
}
